{
    "platform": {
        "apiRuntime": "node:18"
    },
    "routes": [
        {
            "route": "/api/*",
            "allowedRoles": [
                "anonymous"
            ]
        }
    ],
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/api/*",
            "/_next/*",
            "/favicon.ico",
            "/*.{png,jpg,gif,svg,ico,css,js}"
        ]
    }
}